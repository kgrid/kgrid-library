{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 8,
          "maxLength": 80,
          "title": "TITLE",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Title",
            "title": "Please enter the title for this knowledge object"
          }
        },
        "description": {
          "type": "string",
          "maxLength": 300,
          "title": "DESCRIPTION",
          "attrs": {
            "type": "textarea",
            "placeholder": "What is this knowledge object about?"
          }
        },
        "keywords": {
          "type": "string",
          "minLength": 8,
          "maxLength": 80,
          "title": "KEYWORDS",
          "attrs": {
            "type":"text",
            "placeholder": "KEYWORDS",
            "title": "Please enter some keywords for this knowledge object"
          }
        },
        "owners": {
          "type": "string",
          "minLength": 8,
          "maxLength": 80,
          "title": "OWNERS",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Owners",
            "title": "Please enter the owners of this knowledge object"
          }
        },
        "contributors": {
          "type": "string",
          "minLength": 8,
          "maxLength": 80,
          "title": "CONTRIBUTORS",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Contributors",
            "title": "Please enter the contributors of this knowledge object"
          }
        },
        "license": {
          "type": "linked",
          "title": "License",
          "properties": {
            "licenseName": {
              "type": "string",
              "title":"License Title"
            },
            "licenseLink": {
              "type": "string",
              "title":"License link"
            }
          }
        },
        "citations": {
          "type": "array",
          "items":
            {
              "type": "string",
              "title":"citation",
              "attrs": {
                "type":"text",
                "placeholder": "Knowledge Object Title",
                "title": "Please enter the title for this knowledge object"
              }
            }

        }
      }
    },
    "model":{
      "type": "object",
      "properties": {
        "functionName": {
          "type": "string",
          "title": "FUNCTION NAME",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Contributors",
            "title": "Please enter the contributors of this knowledge object"
          }
        },
        "adapterType": {
          "type": "string",
          "title": "ADAPTER TYPE",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Contributors",
            "title": "Please enter the contributors of this knowledge object"
          }
        },
        "resource": {
          "type": "string",
          "title": "RESOURCE",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Contributors",
            "title": "Please enter the contributors of this knowledge object"
          }
        },
        "service": {
          "type": "string",
          "title": "SERVICE",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Contributors",
            "title": "Please enter the contributors of this knowledge object"
          }
        },
        "adapters": {
          "type": "array",
          "items":{
            "type": "linked",
            "title": "ADAPTER",
            "properties": {
              "filename": {
                "type": "string",
                "title":"File Name"
              },
              "download_url": {
                "type": "string",
                "title":"Download Link"
              }
            }
          }
      }
    }
  },
    "logData":{
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "title": "CONTENT",
          "attrs": {
            "type":"text",
            "placeholder": "Knowledge Object Contributors",
            "title": "Please enter the contributors of this knowledge object"
          }
        }
      }
    }
  },
  "required": [
    "metadata"
  ]
}
